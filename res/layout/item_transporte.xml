<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/imageViewLogo"
        android:layout_width="50dp"
        android:layout_height="60dp"
        android:layout_marginLeft="10dp"
        android:src="@drawable/bus" />

    <TextView
        android:id="@+id/textViewHorario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageViewLogo"
        android:layout_marginBottom="14dp"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/imageViewLogo"
        android:text="Maracanã"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageViewLogo"
        android:layout_alignLeft="@+id/textViewHorario"
        android:text="Viação Fenix"
        android:textAppearance="?android:attr/textAppearanceSmall" />

</RelativeLayout>